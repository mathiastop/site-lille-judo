{% extends 'base.html.twig' %}

{% block title %}Documents - Lille Judo{% endblock %}

{% block body %}
    <div class="container">
        <ul class="nav nav-tabs" id="documentsTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="grades-tab" data-toggle="tab" href="#grades" aria-controls="grades" aria-selected="true">Passages des grades</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="galerie-tab" data-toggle="tab" href="#galerie" aria-controls="galerie" aria-selected="false">Galerie</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="exemple-tab" data-toggle="tab" href="#exemple" aria-controls="exemple" aria-selected="false">Exemple</a>
            </li>
        </ul>
        <div class="tab-content" id="documentsTabContent">
            <div id="grades" class="tab-pane fade show active" role="tabpanel" aria-labelledby="grades-tab">
                <h3>Passages des grades</h3>
                <ul class="nav nav-tabs" id="gradesTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="fiches-tab" data-toggle="tab" href="#fiches" aria-controls="fiches" aria-selected="true">Fiches Techniques</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="fiches-tab" data-toggle="tab" href="#photos" aria-controls="photos" aria-selected="true">Photos Passages</a>
                    </li>
                </ul>
                <div class="tab-content" id="gradesTabContent">
                    <div id="fiches" class="tab-pane fade show active" role="tabpanel" aria-labelledby="fiches-tab">
                        <h3>Fiches Techniques</h3>
                        <a href="{{ path('jaune') }}" target="_blank">Ceinture Jaune</a><br/>
                        <a href="{{ path('orange') }}" target="_blank">Ceinture Orange</a><br/>
                        <a href="{{ path('verte') }}" target="_blank">Ceinture Verte</a><br/>
                        <a href="{{ path('marron') }}" target="_blank">Ceinture Marron</a><br/>
                    </div>
                    <div id="photos" class="tab-pane fade" role="tabpanel" aria-labelledby="photos-tab">
                        <h3>Photos Passages</h3>
                        <div class="row text-center justify-content-center">
                            {% for photos_passages_grade in photos_passages_grades %}
                                <div class="col-lg-3 col-md-4 col-6">
                                    <img class="img-fluid img-thumbnail" src="{{ asset('uploads/passage_grades/') }}{{ photos_passages_grade.image }}" alt="">
                                </div>
                            {% else %}
                                <div>
                                    no records found
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div id="galerie" class="tab-pane fade" role="tabpanel" aria-labelledby="galerie-tab">
                {% for gallery in gallerys %}
                    <h3>{{ gallery.name }}</h3>
                    <div class="row text-center text-lg-left">
                        {% for galleryImage in gallery.getGalleryImages() %}
                            <div class="col-lg-3 col-md-4 col-6">
                                <a href="#" class="d-block mb-4 h-100">
                                    <img class="img-fluid img-thumbnail" src="{{ asset('uploads/gallery/') }}{{ galleryImage.image }}" alt="">
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div>
                        no records found
                    </div>
                {% endfor %}
            </div>
            <div id="exemple" class="tab-pane fade" role="tabpanel" aria-labelledby="exemple-tab">
                <h3>Exemple</h3>
            </div>
        </div>
    </div>
{% endblock %}
