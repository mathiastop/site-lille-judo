{% extends 'base.html.twig' %}

{% block title %}Actualités - Lille Judo{% endblock %}

{% block stylesheets %}
    <style>
        .carousel-inner > .carousel-item {
            height: 65vh;
        }
        .carousel-inner-little > .carousel-item {
            height: 32vh;
        }
        .carousel-inner > .carousel-item > a > img {
            position: absolute;
            top: 50%;
            left: 50%;
            -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            max-height: 800px;
            width: auto;
        }
        .carousel-inner-little > .carousel-item > a > img {
            position: absolute;
            top: 50%;
            left: 50%;
            -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            max-height: 220px;
            object-fit: scale-down;
            width: auto;
        }
        .carousel-control-prev-icon, .carousel-control-next-icon {
            height: 100px;
            width: 100px;
            outline: black;
            background-size: 100%, 100%;
            border-radius: 50%;
            background-image: none;
        }
        .carousel-control-next-icon:after {
            content: '>';
            font-size: 55px;
            color: #A93514;
        }
        .carousel-control-prev-icon:after {
            content: '<';
            font-size: 55px;
            color: #A93514;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        {% if firstImage and post.images.count != 1 %}
            <div id="carouselPostClub" class="carousel slide d-none d-md-block" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#{{ firstImage }}" data-slide-to="0" class="active"></li>
                    {% for postImage in post.images|slice(1, post.images.count) %}
                        <li data-target="#{{ postImage.id }}" data-slide-to="{{ postImage.id }}"></li>
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="img-fluid d-block w-100" src="{{ asset('uploads/club/') }}{{ firstImage }}" alt="">
                    </div>
                    {% for postImage in post.images|slice(1, post.images.count) %}
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{ asset('uploads/club/') }}{{ postImage.image }}" alt="">
                        </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselPostClub" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselPostClub" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div id="carouselPostClub2" class="carousel slide d-block d-md-none" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#{{ firstImage }}" data-slide-to="0" class="active"></li>
                    {% for postImage in post.images|slice(1, post.images.count) %}
                        <li data-target="#{{ postImage.id }}" data-slide-to="{{ postImage.id }}"></li>
                    {% endfor %}
                </ol>
                <div class="carousel-inner-little">
                    <div class="carousel-item active">
                        <img class="img-fluid d-block w-100" src="{{ asset('uploads/club/') }}{{ firstImage }}" alt="">
                    </div>
                    {% for postImage in post.images|slice(1, post.images.count) %}
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{ asset('uploads/club/') }}{{ postImage.image }}" alt="">
                        </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselPostClub2" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselPostClub2" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        {% elseif firstImage %}
            <a href="{{ asset('uploads/club/') }}{{ firstImage }}" data-toggle="lightbox">
                <img class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto"
                     src="{{ asset('uploads/club/') }}{{ firstImage }}" alt="">
            </a>
        {% endif %}
        <h1>{{ post.title }}</h1>
        <hr/>
        <p><i class="fa fa-fw fa-calendar"></i>{{ post.createdAt|date('d/m/Y') }}</p>
        <hr/>
        <p>
            {{ post.body|raw }}
        </p>
        {% if post.documents.count != 0 %}
            <h2>Pièces Jointes</h2>
            <ul>
                {% for postDocument in post.documents %}
                    <li>
                        {{ postDocument.titre }}: <a target="_blank" href="{{ asset('uploads/club/') }}{{ postDocument.document }}">cliquez ici</a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
        <a href="{{ path('actualites-club') }}">Revenir à l'index</a>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).on('click', '[data-toggle="lightbox"]', function(event) {
            event.preventDefault();
            $(this).ekkoLightbox();
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.min.js"></script>
{% endblock %}