<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Comp√©tition {{ competition.lieu }}</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <h1>Competition {{ competition.lieu }}</h1>
            <table class="table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Mail</th>
                    <th>Age</th>
                    <th>Categorie</th>
                </tr>
                </thead>
                <tbody>
                {% for inscrit in competition.competitionInscrits %}
                    <tr>
                        <td>{{ inscrit.nom }}</td>
                        <td>{{ inscrit.mail }}</td>
                        <td>{{ inscrit.age }}</td>
                        <td>{{ inscrit.categorie }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Pas d'inscrits</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </body>
</html>
