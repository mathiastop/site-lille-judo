{% extends 'base.html.twig' %}

{% block title %}Compétitions - Lille Judo{% endblock %}

{% block body %}
    <div class="container">
        <ul class="nav nav-tabs" id="competitionsTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="judo-tab" data-toggle="tab" href="#judo" aria-controls="judo" aria-selected="true">Judo</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="jujitsu-tab" data-toggle="tab" href="#jujitsu" aria-controls="jujitsu" aria-selected="false">Ju Jitsu</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="taiso-tab" data-toggle="tab" href="#taiso" aria-controls="taiso" aria-selected="false">Taiso</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="newaza-tab" data-toggle="tab" href="#newaza" aria-controls="newaza" aria-selected="false">Ne Waza</a>
            </li>
        </ul>
        <div class="tab-content" id="competitionsTabContent">
            <div id="judo" class="tab-pane fade show active" role="tabpanel" aria-labelledby="judo-tab">
                <h3>Compétitions Judo</h3>
            </div>
            <div id="jujitsu" class="tab-pane fade" role="tabpanel" aria-labelledby="jujitsu-tab">
                <h3>Compétitions Ju Jitsu</h3>
            </div>
            <div id="taiso" class="tab-pane fade" role="tabpanel" aria-labelledby="taiso-tab">
                <h3>Compétitions Taiso</h3>
            </div>
            <div id="newaza" class="tab-pane fade" role="tabpanel" aria-labelledby="newaza-tab">
                <h3>Compétitions Ne Waza</h3>
            </div>
        </div>
    </div>
{% endblock %}
