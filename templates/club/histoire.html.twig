                                        <span class="timeline-year">{{ president.annee }}</span>
                                        <h3 class="title">{{ president.titre }}</h3>
                                        <p class="description">
                                            {{ president.texte }}
                                        </p>
                                    </div>
                                </div>
                            {% else %}
                                <div class="timeline">
                                    <div class="timeline-content">
                                        <span class="timeline-year">0000</span>
                                        <h3 class="title">No records found</h3>
                                        <p class="description">
                                            No records found
                                        </p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="personnalitesMarquantes" role="tabpanel" aria-labelledby="personnalitesMarquantes-tab">
                <h3>Quelques personnalités marquantes</h3>
                <div class="row">
                    <div class="col-md-12">
                        <div class="main-timeline">
                            {% for personnalite in personnalites %}
                                <div class="timeline">
                                    <div class="timeline-content">
                                        <span class="timeline-year"></span>
                                        <h3 class="title">{{ personnalite.titre }}</h3>
                                        <p class="description">
                                            {{ personnalite.texte }}
                                        </p>
                                    </div>
                                </div>
                            {% else %}
                                <div class="timeline">
                                    <div class="timeline-content">
                                        <span class="timeline-year">0000</span>
                                        <h3 class="title">No records found</h3>
                                        <p class="description">
                                            No records found
                                        </p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="enseignement" role="tabpanel" aria-labelledby="enseignement-tab">
                <h3>L'enseignement</h3>
                <div class="row">
                    <div class="col-md-12">
                        <div class="main-timeline">
                            {% for enseignement in enseignements %}
                                <div class="timeline">
                                    <div class="timeline-content">
                                        <span class="timeline-year"></span>
                                        <p class="description">
                                            {{ enseignement.texte }}
                                        </p>
                                    </div>
                                </div>
                            {% else %}
                                <div class="timeline">
                                    <div class="timeline-content">
                                        <span class="timeline-year">0000</span>
                                        <h3 class="title">No records found</h3>
                                        <p class="description">
                                            No records found
                                        </p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
