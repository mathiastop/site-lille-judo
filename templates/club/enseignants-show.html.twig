{% extends 'base.html.twig' %}

{% block title %}Enseignants - Lille Judo{% endblock %}

{% block stylesheets %}
    <style>
        .table-borderless td, .table-borderless th {
            border: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ professeur.prenom }} {{ professeur.nom }}</h1>
        <hr/>
        <div class="row">
            <div class="col-md">
                {% if professeur.image %}
                    <img class="rounded-circle img-fluid"
                         src="{{ asset('uploads/professeurs/') }}{{ professeur.image }}"
                         width="300"
                         height="300"
                         alt="">
                {% else %}
                    <img class="rounded-circle img-fluid"
                         src="http://placehold.it/300x300"
                         width="300"
                         height="300"
                         alt="">
                {% endif %}
            </div>
            <div class="col-md">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th>Grades</th>
                            <td>{{ professeur.grade }}</td>
                        </tr>
                        <tr>
                            <th>Dipl√¥mes</th>
                            <td>{{ professeur.diplome }}</td>
                        </tr>
                    </tbody>
                </table>
                <p>
                    {{ professeur.description|raw }}
                </p>
            </div>
        </div>
    </div>
{% endblock %}

