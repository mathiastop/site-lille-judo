{% extends 'base.html.twig' %}

{% block title %}Palmar√®s - Lille Judo{% endblock %}

{% block body %}
    {% set color = 0 %}
    <div class="container">
        <div class="row text-center justify-content-center">
            {% for palmares in palmaress %}
                <div class="col">
                    <a data-toggle="modal" data-target="#modal-{{ palmares.id }}">
                        <img class="rounded-circle"
                             {% if color == 0 %}
                                 src="https://dummyimage.com/140x140/533791/FFFFFF&text={{ palmares.annee }}"
                                 {% set color = 1 %}
                             {% else %}
                                 src="https://dummyimage.com/140x140/E9ECEF/000000&text={{ palmares.annee }}"
                                 {% set color = 0 %}
                             {% endif %}
                             width="140"
                             height="140"
                             alt="">
                    </a>
                    <div class="modal fade" id="modal-{{ palmares.id }}" tabindex="-1" role="dialog" aria-labelledby="modal-{{ palmares.id }}" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title" id="modal-title-{{ palmares.id }}">{{ palmares.annee }}</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    {{ palmares.texte|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <p></p>
                </div>
            {% else %}
                <div class="col">
                    no records founds
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
