{% extends 'base.html.twig' %}

{% block title %}Accueil - Lille Judo{% endblock %}
{% block stylesheets %}
    <style>
        .iframe-outer, .iframe-inner {
            height: 200px;
            width: 200px;
        }
        .iframe-outer {
            display: inline-block;
            position: relative;
        }
        .iframe-inner {
            overflow: hidden;
            border-radius: 5000px;
            position: absolute;
        }
        .iframe-inner iframe {
            height: 100%;
            width: 100%;
        }
    </style>
{% endblock %}
